<section>
  <p>
    <span class="marginnote">
      Styled as if <span class="newthought"><%=@allegiance.capitalize%></span> <%=@allegiance_symbol%>
    </span>
    
    <span class="marginnote">
      <span class="newthought">Player:</span> <%=@player.name%>
    </span>
  </p>
  
</section>

<%= form_with do |f| %>
  <%= f.submit "Change team" %>
<% end %>

<section>
  
  <p>
    <span class="marginnote">
      My notes:<br/>
      <textarea placeholder="I think... (drag to expand)"></textarea>
    </span>
    <span class="marginnote showOnHover">
      <span class="reverseVisibility"><span class="newthought">Rulebook</span>(hover to show)</span>
      <i>Who drinks of the </i><span class="newthought">Accurs√®d Chalice</span><i> shall turn to Evil;<br/>
      and of </i><span class="newthought">Merlin's Goblet</span><i>, to the side of Good;<br/>
      When Arthur finally brings the </i><span class="newthought">Holy Grail</span><i> to his lips, shall his side be ever victorious.</i>
    </span>
  </p>
  <%= render partial: 'players' %>
  <p><span class="newthought">Cups:</span></p>
</section>

<section>
  <% @game.cups.each do |cup| %>
    <figure>
      <%= link_to image_tag("cups/#{cup.image}", alt: cup.human_readable_name, id: cup.kind), game_change_team_path(game_slug: @game.slug), method: :post, class: "noAnchorUnderlines" %>
      <h4><i><%= cup.human_readable_name%></i></h4>
    </figure>
  <% end %>
  <p>
    
  </p>
</section>

<%= button_to "Leave Game", action: "leave_game", slug: @game.slug %>
