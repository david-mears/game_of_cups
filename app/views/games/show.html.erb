<h1>You are viewing the game called <span class="newthought"><%= @game.slug %></span></h1>
<section>
  <p>
    <label for="mn-notepad" class="margin-toggle">&#8853;</label>
    <input type="checkbox" id="mn-notepad" class="margin-toggle"/>
    <span class="marginnote">
      My notes:<br/>
      <textarea placeholder="I think... (drag to expand)"></textarea>
    </span>
  </p>

  <p>Slug: <%= @game.slug %></p>
  <p>Players:
    <% @game.players.each do |player| %>
      <%= player.name %><sup><%=player.allegiance_symbol %></sup> 
    <% end %>
  </p>
  <p>Cups:</p>
</section>

<section>
  <% @game.cups.each do |cup| %>
    <figure style="text-align: center">
      <%= image_tag("cups/#{cup.image}", height: '100', alt: cup.human_readable_name) %>
      <p><span class="newthought"><%= cup.human_readable_name%></span></p>
    </figure>
  <% end %>
</section>

