<section>
  <p>
    <span class="marginnote spacious">
      <%=@player.name %>, you are <span class="newthought"><%=@player.allegiance.capitalize%></span> <%=@allegiance_symbol%>
    </span>
  </p>
</section>

<section>
  
  <p>
    <span class="marginnote spacious">
      My notes:<br/>
      <textarea placeholder="I think... (drag to expand)"></textarea>
    </span>
    <span class="marginnote showOnHover spacious">
      <span class="reverseVisibility"><span class="newthought">Rulebook </span>(hover to show)</span>
      <i>Whosoever drinks of the </i><span class="newthought">Accurs√®d Chalice</span><i> shall turn to Evil;<br/>
      and of </i><span class="newthought">Merlin's Goblet</span><i>, to the side of Good;<br/>
      Finally, when Arthur brings the </i><span class="newthought">Holy Grail</span><i> to his lips, shall his side be ever victorious.</i>
    </span>
  </p>
  
  <%= render partial: 'players' %>
</section>

<%= render partial: 'cups' %>

<section>
  <% @draughts.sort_by(&:id).each do |draught| %>
    <p><%= draught.player.name %> <%= ['drank', 'swigged', 'took a draught of', 'sipped', 'quaffed', 'tasted', 'sampled', 'tried', 'supped', 'drank'].sample %> cup <%= draught.cup.label %></p>
  <% end %>
</section>

<div id="leaveGame">
  <%= button_to "Leave Game", games_leave_game_path(slug: @game.slug) %>
</div>
