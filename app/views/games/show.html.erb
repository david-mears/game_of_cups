<section>
  <p>
    <span class="marginnote">
      <%=@player.name.titleize%>, you are <span class="newthought"><%=@player.allegiance.capitalize%></span> <%=@allegiance_symbol%>
    </span>
  </p>
</section>

<section>
  
  <p>
    <span class="marginnote">
      My notes:<br/>
      <textarea placeholder="I think... (drag to expand)"></textarea>
    </span>
    <span class="marginnote showOnHover">
      <span class="reverseVisibility"><span class="newthought">Rulebook </span>(hover to show)</span>
      <i>Whosoever drinks of the </i><span class="newthought">Accurs√®d Chalice</span><i> shall turn to Evil;<br/>
      and of </i><span class="newthought">Merlin's Goblet</span><i>, to the side of Good;<br/>
      Finally, when Arthur brings the </i><span class="newthought">Holy Grail</span><i> to his lips, shall his side be ever victorious.</i>
    </span>
  </p>
  <%= render partial: 'players' %>
</section>

<section id="cupsSection" data-player-allegiance= <%= @player.allegiance %> >
  <% @game.cups.sort_by(&:label).each do |cup| %>
    <figure>
      <p><%= cup.label %></p>
      <%= link_to image_tag("cups/#{cup.image}", alt: (@player.quaffed?(cup) ? cup.human_readable_name : 'A cup of unknown identity'), id: cup.kind), game_player_quaff_path(game_slug: @game.slug, player_id: @player.id, params: {cup_id: cup.id}), method: :post, class: "noAnchorUnderlines", id: "#{cup.kind}_anchor" %>
      <% if @player.quaffed?(cup) %>
        <h4><i><%= cup.human_readable_name%></i></h4>
      <% end %>
    </figure>
  <% end %>
  <p>
    
  </p>
</section>

<%= button_to "Leave Game", action: "leave_game", slug: @game.slug %>
